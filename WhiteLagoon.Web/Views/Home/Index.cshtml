@{
    ViewData["Title"] = "Home";
}



<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1 class="text-primary"><i class="bi bi-house-door-fill me-2"></i>Welcome to White Lagoon</h1>
        </div>
    </div>
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white py-3">
            <div class="row">
                <div class="col">
                    <h5 class="mb-0">Discover Our Luxury Villas</h5>
                </div>
                <div class="col text-end">
                    <a asp-controller="Villa" asp-action="Index" class="btn btn-light">
                        <i class="bi bi-search me-1"></i>View All Villas
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-4">
                    <h3>About White Lagoon</h3>
                    <p>White Lagoon offers luxurious villa accommodations in breathtaking locations. Experience unparalleled comfort and stunning views in our carefully curated selection of properties.</p>
                </div>
                <div class="col-md-6 mb-4">
                    <h3>Featured Amenities</h3>
                    <ul>
                        <li>Private pools</li>
                        <li>Oceanfront views</li>
                        <li>Gourmet kitchens</li>
                        <li>24/7 concierge service</li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <h3>Featured Villas</h3>
                   
                </div>
            </div>
        </div>
    </div>
</div>

