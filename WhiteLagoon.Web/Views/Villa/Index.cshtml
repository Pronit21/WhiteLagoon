@model IEnumerable<Villa>

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1 class="text-primary"><i class="bi bi-house-fill me-2"></i>Villa Number List</h1>
        </div>
    </div>

    <div class="card shadow border-0">
        <div class="card-header bg-success text-white py-3">
            <div class="row">
                <div class="col">
                    <h5 class="mb-0">Manage Villas</h5>
                </div>
                <div class="col text-end">
                    <a asp-controller="Villa" asp-action="Create" class="btn btn-light">
                        <i class="bi bi-plus-circle me-1"></i>Create New Villa Number
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Sqft</th>
                            <th>Occupancy</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var villa in Model)
                        {
                            <tr>
                                <td>@villa.Name</td>
                                <td>@villa.Price.ToString("C")</td>
                                <td>@villa.Sqft sq ft</td>
                                <td>@villa.Occupancy person(s)</td>
                                <td>
                                    <a asp-controller="Villa" asp-action="Update" asp-route-id="@villa.Id" class="btn btn-primary btn-sm">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Details"   asp-route-id="@villa.Id" class="btn btn-info btn-sm">
                                        <i class="bi bi-info-circle"></i>
                                    </a>
                                    <a asp-controller="Villa" asp-action="Delete" asp-route-id="@villa.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>