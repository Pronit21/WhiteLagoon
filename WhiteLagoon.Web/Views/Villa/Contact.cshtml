@{
    ViewData["Title"] = "Contact Us";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1 class="text-primary"><i class="bi bi-envelope-fill me-2"></i>Contact Us</h1>
        </div>
    </div>
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white py-3">
            <h5 class="mb-0">Get in Touch</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-4">
                    <h3>Send Us a Message</h3>
                    <form>
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="subject" class="form-label">Subject</label>
                            <input type="text" class="form-control" id="subject" required>
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label">Message</label>
                            <textarea class="form-control" id="message" rows="4" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Send Message</button>
                    </form>
                </div>
                <div class="col-md-6 mb-4">
                    <h3>Contact Information</h3>
                    <p><i class="bi bi-geo-alt-fill me-2"></i>123 White Lagoon Street, Tropical City, 12345</p>
                    <p><i class="bi bi-telephone-fill me-2"></i>+1 (555) 123-4567</p>
                    <p><i class="bi bi-envelope-fill me-2"></i>info@whitelagoon.com</p>
                    <h4 class="mt-4">Business Hours</h4>
                    <p>Monday - Friday: 9:00 AM - 5:00 PM</p>
                    <p>Saturday - Sunday: 10:00 AM - 3:00 PM</p>
                    <h4 class="mt-4">Follow Us</h4>
                    <div class="social-icons">
                        <a href="#" class="text-primary me-3"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-primary me-3"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="text-primary me-3"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-primary"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-success text-white py-3">
            <h5 class="mb-0">Our Location</h5>
        </div>
        <div class="card-body">
            <!-- Replace the src with your actual Google Maps embed URL -->
            <div class="ratio ratio-16x9">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3781.6344935932966!2d73.76796007470946!3d18.59051006703503!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bc2b93ff625ac09%3A0xc40dcca0ba0d94ea!2sHoltec%20Asia%20Pvt.%20Ltd!5e0!3m2!1sen!2sin!4v1723548840384!5m2!1sen!2sin" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
</div>